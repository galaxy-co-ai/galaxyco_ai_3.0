{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.mts",
    "trigger.config.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    ".next/dev/types",
    "node_modules",
    "Figma Make Project",
    "_to-delete",
    "_to-delete-after-deploy",
    "tests",
    "vitest.config.ts",
    "**/_archive*/**",
    "**/_archive*",
    "scripts/**/*"
  ]
}
