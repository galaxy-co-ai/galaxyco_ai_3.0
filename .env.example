# =============================================================================
# GalaxyCo.ai Web App - Example Environment Configuration
# =============================================================================
# This file is SAFE to commit. Replace placeholder values with your own.
# Copy to `.env.local` and fill in real credentials for local development.
# =============================================================================

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Database Connection (Neon PostgreSQL)
DATABASE_URL="postgresql://<user>:<password>@<host>/<database>?sslmode=require&channel_binding=require"

# Clerk Authentication
CLERK_SECRET_KEY="sk_test_..."                    # Server-side secret
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."   # Public key for frontend

# Data Encryption (32-byte hex string)
ENCRYPTION_KEY="<32-byte-hex-key>"                # e.g. output of crypto.randomBytes(32).toString('hex')

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# =============================================================================
# AI SERVICES - Required for AI Features
# =============================================================================

# OpenAI API Key (Required for core AI features)
OPENAI_API_KEY="sk-proj-..."

# Anthropic API Key (Optional - for Claude models)
ANTHROPIC_API_KEY="sk-ant-..."

# Google Generative AI API Key (Optional - for Gemini models)
GOOGLE_GENERATIVE_AI_API_KEY="AIza..."

# =============================================================================
# VECTOR DATABASE - Upstash / Redis
# =============================================================================

UPSTASH_REDIS_REST_URL="https://<your-redis-endpoint>.upstash.io"
UPSTASH_REDIS_REST_TOKEN="<redis-rest-token>"

UPSTASH_VECTOR_REST_URL="https://<your-vector-endpoint>.upstash.io"
UPSTASH_VECTOR_REST_TOKEN="<vector-rest-token>"

# =============================================================================
# FILE STORAGE - Vercel Blob
# =============================================================================

BLOB_READ_WRITE_TOKEN="vercel_blob_rw_..."

# =============================================================================
# BACKGROUND JOBS - Trigger.dev (Optional)
# =============================================================================

TRIGGER_SECRET_KEY="tr_dev_..."
# TRIGGER_API_URL="https://api.trigger.dev"    # Optional override

# =============================================================================
# OAUTH INTEGRATIONS - Gmail, Calendar, Outlook
# =============================================================================

# Google OAuth (Gmail + Calendar)
GOOGLE_CLIENT_ID="<google-oauth-client-id>"
GOOGLE_CLIENT_SECRET="<google-oauth-client-secret>"

# Microsoft OAuth (Outlook + Calendar)
MICROSOFT_CLIENT_ID="<microsoft-app-client-id>"
MICROSOFT_CLIENT_SECRET="<microsoft-client-secret>"

# =============================================================================
# ENRICHMENT / SEARCH
# =============================================================================

GOOGLE_CUSTOM_SEARCH_API_KEY="AIza..."
GOOGLE_CUSTOM_SEARCH_ENGINE_ID="<custom-search-engine-id>"

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================

NEXT_PUBLIC_SENTRY_DSN="https://examplePublicDSN.ingest.us.sentry.io/1234567890"
SENTRY_ORG="galaxyco-ai"
SENTRY_PROJECT="<sentry-project-id>"

# =============================================================================
# EMAIL / NOTIFICATIONS
# =============================================================================

RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="GalaxyCo.ai <you@example.com>"

# =============================================================================
# REALTIME UPDATES - Pusher
# =============================================================================

PUSHER_APP_ID="<pusher-app-id>"
PUSHER_KEY="<pusher-key>"
PUSHER_SECRET="<pusher-secret>"
PUSHER_CLUSTER="mt1"

NEXT_PUBLIC_PUSHER_KEY="<pusher-public-key>"
NEXT_PUBLIC_PUSHER_CLUSTER="mt1"

# =============================================================================
# COMMUNICATIONS - Twilio
# =============================================================================

TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="<twilio-auth-token>"
TWILIO_PHONE_NUMBER="+10000000000"

TWILIO_FLEX_INSTANCE_SID="GOxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_TASKROUTER_WORKSPACE_SID="WSxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# WEBHOOKS / PLATFORM
# =============================================================================

CLERK_WEBHOOK_SECRET="whsec_..."                 # Optional - for Clerk webhooks

VERCEL_TOKEN="vercel_..."                        # For CI/CD automation (optional)
VERCEL_PROJECT_ID="prj_..."                      # Vercel project ID

# =============================================================================
# APP-SPECIFIC FLAGS (SAFE DEFAULTS)
# =============================================================================

EMAIL="you@example.com"                          # Dev login / seed account (optional)
PASSWORD="ChangeMe123!"                          # Dev password (never use in prod)

ALLOW_ADMIN_BYPASS=false                          # Do NOT enable in production

# =============================================================================
# DOCUMENT CREATION - Gamma
# =============================================================================

GAMMA_API_KEY="sk-gamma-..."
